{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
  },
  "plugins": [
    "react", "jsx-a11y", "import", "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "react/state-in-constructor": [
      0
    ],
    "react/jsx-fragments": [
      1,
      "element"
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "controlComponents": [
          "Field"
        ],
        "depth": 3
      }
    ]
  }
}
